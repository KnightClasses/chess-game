<!DOCTYPE html>
<html>
  <head>
    <title>Chess</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
    <ul class="navbar-nav float-right">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to "New Game", "#", data:{toggle:"modal", target:"#myModal"}, class: "nav-link"%>
        </li>
        <li class="nav-item">
          <%= link_to "Join a Game", "#", data:{toggle:"modal", target:"#listGamesModal"}, class: "nav-link"%>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
        <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
      </li>
    </ul>
  </nav>

      <% end %>
    </ul>
  </nav>

  <body>

    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>


    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel">Start your Game</h4>
        </div>


      <%=simple_form_for Game.new do |f| %>
        <div class="modal-body">
            <%= f.input :name %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <%= f.submit "Start", class: "btn btn-primary"%>
          </div>
      <%end%>
        </div>
      </div>
    </div>


    <div class="modal fade" id="listGamesModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Available games to join: </h4>
          </div>


          <% Game.all.each do |game| %>
            <% if ( !game.black_player &&  !(current_user.id == game.user_id) )%>
              <!-- second conditional currently does not work unless user is already signed in -->
              <h4>Player <%= game.user_id %> is waiting for an opponent.</h4>
              <!-- change to username and game room name later -->
              <span><%= link_to "Join this game", game_path(game), class: 'btn btn-primary btn-large' %></span>
              <br />

            <% end %>
          <% end %>


          </div>
        </div>
      </div>
    </div>

  <%= yield %>

  </body>
</html>
